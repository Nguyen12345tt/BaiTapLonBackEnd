@model PhanMemCamDo.Models.ViewModels.LoginVM
@{
    ViewData["Title"] = "Đăng Nhập Hệ Thống";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card shadow-lg border-0 rounded-lg">
            <div class="card-header bg-success text-white text-center">
                <h3 class="font-weight-light my-2">🔐 Đăng Nhập</h3>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Username" class="form-control" placeholder="Tên đăng nhập" />
                        <label>Tên đăng nhập</label>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu" />
                        <label>Mật khẩu</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-success btn-lg">Đăng Nhập</button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center py-3">
                <div class="small">
                    <a asp-action="Register" class="text-decoration-none">Chưa có tài khoản? Đăng ký ngay!</a>
                </div>
            </div>
        </div>
    </div>
</div>