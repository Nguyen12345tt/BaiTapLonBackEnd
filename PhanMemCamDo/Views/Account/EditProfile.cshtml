@model PhanMemCamDo.Models.Entities.User
@{
    ViewData["Title"] = "Cập Nhật Hồ Sơ";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-white border-bottom-0 pt-4 text-center">
                    <div class="d-inline-block p-3 rounded-circle bg-light text-primary mb-2 shadow-sm">
                        <i class="fa-solid fa-user-pen fa-2x"></i>
                    </div>
                    <h4 class="fw-bold text-primary">Chỉnh Sửa Thông Tin</h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="EditProfile" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Username" />
                        <input type="hidden" asp-for="Password" />
                        <input type="hidden" asp-for="Role" />

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-floating mb-3">
                            <input type="text" class="form-control bg-light" id="floatingUser" value="@Model.Username" readonly disabled>
                            <label for="floatingUser"><i class="fa-solid fa-user-lock me-1"></i> Tên đăng nhập</label>
                            <small class="text-muted ms-1">Tên đăng nhập không thể thay đổi.</small>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="FullName" class="form-control" id="floatingName" placeholder="Nhập họ tên" required>
                            <label for="floatingName"><i class="fa-solid fa-signature me-1"></i> Họ và tên</label>
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" id="floatingEmail" placeholder="name@example.com" type="email">
                            <label for="floatingEmail"><i class="fa-solid fa-envelope me-1"></i> Email</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="PhoneNumber" class="form-control" id="floatingPhone" placeholder="Số điện thoại">
                            <label for="floatingPhone"><i class="fa-solid fa-phone me-1"></i> Số điện thoại</label>
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg shadow fw-bold">
                                <i class="fa-solid fa-save me-2"></i> Lưu Thay Đổi
                            </button>
                            <a asp-action="Profile" class="btn btn-outline-secondary">
                                <i class="fa-solid fa-arrow-left me-2"></i> Quay Lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}