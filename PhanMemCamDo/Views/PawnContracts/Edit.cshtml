@using PhanMemCamDo.Models.Enums
@model PhanMemCamDo.Models.Entities.PawnContract

@{
    ViewData["Title"] = "Cập Nhật Hợp Đồng";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="fa-solid fa-pen-to-square"></i> Cập Nhật Hợp Đồng: <b>@Model.ContractCode</b></h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ContractCode" />
                <input type="hidden" asp-for="CustomerId" />
                <input type="hidden" asp-for="AssetId" />
                <input type="hidden" asp-for="StartDate" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <div class="col-md-6 border-end">
                        <h5 class="text-primary border-bottom pb-2">1. Thông Tin & Tài Sản</h5>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Khách Hàng</label>
                            <input type="text" class="form-control bg-light" value="@Model.Customer?.FullName" readonly />
                            <small class="text-muted">Không thể thay đổi khách hàng.</small>
                        </div>

                        <div class="card bg-light border-0 p-3">
                            <h6 class="text-dark fw-bold mb-2"><i class="fa-solid fa-box"></i> Cập Nhật Tài Sản</h6>

                            <div class="mb-2">
                                <label class="form-label small fw-bold">Loại Tài Sản</label>
                                <select name="AssetCategoryId" class="form-select" asp-items="ViewBag.AssetCategoryId">
                                </select>
                            </div>

                            <div class="mb-2">
                                <label class="form-label small fw-bold">Tên Tài Sản</label>
                                <input type="text" name="TenTaiSan" class="form-control" value="@Model.Asset?.AssetName" required />
                            </div>

                            <div class="mb-0">
                                <label class="form-label small fw-bold">Mô Tả</label>
                                <textarea name="MoTaTaiSan" class="form-control" rows="2">@Model.Asset?.Description</textarea>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h5 class="text-danger border-bottom pb-2">2. Thông Tin Thay Đổi</h5>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Số Tiền Cầm (VNĐ)</label>
                            <input asp-for="PawnAmount" class="form-control fw-bold text-danger form-control-lg"
                                   type="number" step="1000" />
                            <span asp-validation-for="PawnAmount" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Lãi Suất (%)</label>
                            <input asp-for="InterestRate" class="form-control fw-bold text-primary" type="number" step="0.01" />
                            <span asp-validation-for="InterestRate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Ngày Hết Hạn (Gia Hạn)</label>
                            <input asp-for="EndDate" class="form-control" type="datetime-local" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Trạng Thái</label>
                            <select asp-for="Status" class="form-select fw-bold" asp-items="Html.GetEnumSelectList<ContractStatus>()"></select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-muted small">Ngày Tạo Hợp Đồng</label>
                            <input type="text" class="form-control form-control-sm bg-light" value="@Model.StartDate.ToString("dd/MM/yyyy HH:mm")" readonly />
                        </div>
                    </div>
                </div>

                <div class="mt-4 text-center">
                    <button type="submit" class="btn btn-warning btn-lg px-5 shadow">
                        <i class="fa-solid fa-save"></i> Lưu Thay Đổi
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-3">Hủy Bỏ</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}