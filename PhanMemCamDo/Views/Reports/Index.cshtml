@model IEnumerable<PhanMemCamDo.Controllers.BaoCaoViewModel>

@{
    ViewData["Title"] = "Báo Cáo Phân Bổ Vốn";
}

<div class="container mt-4">
    <h3 class="text-uppercase fw-bold text-primary mb-4">
        <i class="fa-solid fa-chart-pie"></i> Báo Cáo Phân Bổ Vốn
    </h3>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card bg-primary text-white shadow">
                <div class="card-body">
                    <h5><i class="fa-solid fa-sack-dollar"></i> Tổng Vốn Đang Cầm</h5>
                    <h2 class="fw-bold">@(((decimal)ViewBag.TongVon).ToString("N0")) đ</h2>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-success text-white shadow">
                <div class="card-body">
                    <h5><i class="fa-solid fa-file-invoice"></i> Tổng Hợp Đồng Đang Chạy</h5>
                    <h2 class="fw-bold">@ViewBag.TongDon Hợp đồng</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow border-0">
        <div class="card-header bg-light fw-bold">
            Chi tiết theo Loại Tài Sản
        </div>
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Loại Tài Sản</th>
                        <th class="text-center">Số Lượng</th>
                        <th class="text-end">Tổng Tiền Cầm</th>
                        <th class="ps-4">Tỷ Trọng Vốn</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold text-primary">@item.TenLoai</td>
                            <td class="text-center">
                                <span class="badge bg-secondary rounded-pill">@item.SoLuong</span>
                            </td>
                            <td class="text-end fw-bold text-danger">
                                @item.TongTien.ToString("N0") đ
                            </td>
                            <td class="ps-4" style="width: 30%">
                                <div class="d-flex align-items-center">
                                    <span class="me-2 small fw-bold">@item.TiLeVon%</span>
                                    <div class="progress flex-grow-1" style="height: 8px;">
                                        <div class="progress-bar bg-info" role="progressbar"
                                             style="width: @item.TiLeVon%"></div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>